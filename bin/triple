#!/usr/bin/env node

var chalk = require('chalk'),
	error = chalk.bold.red,
	program = require('commander'),
	triple = require('..');

program.description('REPL for Titanium')
	.version(require('../package.json').version)
	.usage('[options]')
	.option('-a, --android [value]', 'Launch Android emulator')
	.option('-i, --ios [value]', 'Launch iOS simulator')
	.option('-m, --module <ids>', 'Add native module(s) to REPL VM', function list(val) {
		return val.split(',');
	})
	.option('-v, --verbose', 'Enable verbose output');

program.parse(process.argv);

triple(program, function(err) {
	if (err) {
		console.error(error(err.toString()));
	} else {
		process.exit();
	}
});
